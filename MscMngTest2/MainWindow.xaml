<Window x:Class="MscMngTest2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MusicManager" Height="500" Width="800">
    <Grid>
        <TreeView x:Name="Tree1" HorizontalAlignment="Left" Height="359" Margin="10,10,0,0" VerticalAlignment="Top" Width="280"/>
        <TextBox HorizontalAlignment="Left" Height="22" Margin="297,432,0,0" TextWrapping="Wrap" Text="ape, cue, mp3" VerticalAlignment="Top" Width="487" TextChanged="TextBox_TextChanged"/>
        <Label Content="Filetypes : " HorizontalAlignment="Left" Height="33" Margin="295,408,0,0" VerticalAlignment="Top" Width="200"/>
        <Label Content="Current IndexPath:" HorizontalAlignment="Left" Height="51" Margin="10,408,0,0" VerticalAlignment="Top" Width="280"/>
        <Button x:Name="buttonModifyIndex" Content="Folder Index" HorizontalAlignment="Left" Height="27" Margin="10,376,0,0" VerticalAlignment="Top" Width="280" Click="buttonModifyIndex_Click"/>
        <Button x:Name="buttonOpenMusic" Content="AirPlay" HorizontalAlignment="Left" Height="27" Margin="297,376,0,0" VerticalAlignment="Top" Width="485" Click="buttonOpenMusic_Click"/>
        <DataGrid HorizontalAlignment="Left" Margin="297,10,0,0" VerticalAlignment="Top" Height="359" Width="487"/>
    </Grid>
</Window>
